<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nueva_vacuna"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.myapplication.vista.RegistroVacuna">

    <ImageView
        android:id="@+id/img_cedula_mascota_buscar"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/huella"
        />

    <EditText
        android:id="@+id/edt_cedula_mascota"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:hint="Cedula Mascota"
        android:textColorHighlight="@color/colorAccent"
        android:textStyle="bold"
        android:inputType="number"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:onClick="consultarMascota"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <ListView
        android:id="@+id/lista_vacuna"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"></ListView>

    <TextView
        android:id="@+id/txt_nueva_vacuna"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="240dp"
        android:text="Nueva VACUNA"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_nombre_vacuna"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:hint="                Nombre Vacuna"
        android:textColorHighlight="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fecha"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="310dp"
        android:text="Fecha"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_fecha"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:hint="                            ///"
        android:focusable="false"
        android:inputType="date"
        android:textColorHighlight="@color/colorAccent"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_dosis"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:hint="                         Dosis"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="430dp"
        android:background="@color/colorAccent"
        android:onClick="registroVacuna"
        android:text="registrar" />


</RelativeLayout>
