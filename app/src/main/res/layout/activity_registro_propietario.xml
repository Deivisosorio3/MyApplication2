<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.myapplication.vista.RegistroPropietario">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="30dp"
    app:srcCompat="@mipmap/huell"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        app:srcCompat="@mipmap/propietario"
        android:id="@+id/imageView" />

<TextView
    android:layout_width="200dp"
    android:layout_height="20dp"
    android:layout_marginTop="20dp"
    android:text="Nuevo Propietario"
    android:id="@+id/textView"
    android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edt_nombre_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre Propietario"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="97dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/edt_cedula_propietario" />

    <EditText
        android:id="@+id/edt_cedula_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cedula Propietario"
        android:inputType="number"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:id="@+id/edt_telefono_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefono Propietario"
        android:inputType="number"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="178dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/edt_nombre_propietario" />

    <Button
        android:id="@+id/btn_registrar_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="200dp"
        android:background="@color/colorAccent"
        android:onClick="registrarPropietario"
        android:text="registrar"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="274dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/edt_cedula_propietario"
        android:layout_marginBottom="148dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        app:srcCompat="@mipmap/telefono"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/edt_telefono_propietario" />

</RelativeLayout>
