<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.myapplication.vista.RegistroPropietario">
<TextView
    android:layout_width="200dp"
    android:layout_height="20dp"
    android:layout_marginTop="20dp"
    android:text="Nuevo Propietario"
    android:id="@+id/textView" />

    <EditText
        android:id="@+id/edt_nombre_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre Propietario"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="97dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/edt_cedula_mascota" />

    <EditText
        android:id="@+id/edt_cedula_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cedula Propietario"
        android:inputType="number"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="40dp"
android:layout_marginTop="20dp"
        android:layout_below="@+id/edt_nombre_propietario"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edt_telefono_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefono Propietario"
        android:inputType="number"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="178dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/edt_cedula_mascota"
        android:layout_alignStart="@+id/edt_cedula_mascota" />

    <Button
        android:id="@+id/btn_registrar_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edt_telefono_propietario"
        android:layout_marginRight="200dp"
        android:layout_marginTop="59dp"
        android:layout_toEndOf="@+id/textView"
        android:background="@color/colorAccent"
        android:onClick="registrarPropietario"
        android:text="registrar"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="274dp" />

</RelativeLayout>
