<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.myapplication.vista.RegistroPropietario">

    <EditText
        android:id="@+id/edt_telefono_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefono Propietario"
        android:inputType="number"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="97dp"
        android:layout_above="@+id/btn_registrar_propietario"
        android:layout_alignStart="@+id/edt_cedula_propietario"
        android:layout_marginBottom="57dp" />

    <EditText
        android:id="@+id/edt_cedula_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cedula Propietario"
        android:inputType="number"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="40dp"

        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edt_nombre_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edt_cedula_propietario"
        android:layout_below="@+id/edt_cedula_propietario"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Nombre Propietario"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="178dp" />

    <Button
        android:id="@+id/btn_registrar_propietario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="211dp"
        android:layout_marginStart="39dp"
        android:onClick="registrarPropietario"
        android:text="registrar"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="274dp" />

</RelativeLayout>
